<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="recommendation_engine.infrastructure.amqp_denormalizer.customer_placed_order" class="RecommendationEngine\Infrastructure\Amqp\Denormalizer\CustomerPlacedOrderDenormalizer">
            <tag name="rabbitmq_simplebus.amqp_denormalizer" />
        </service>

        <service id="recommendation_engine.application.repository.product" class="RecommendationEngine\Infrastructure\Repository\Neo4jProductRepository">
            <argument type="service" id="neo4j.entity_manager.default" />
        </service>

        <service id="recommendation_engine.application.projector.customer_placed_order" class="RecommendationEngine\Application\Projector\CustomerPlacedOrderProjector">
            <argument type="service" id="neo4j.entity_manager.default" />
            <tag name="event_subscriber" subscribes_to="RecommendationEngine\Domain\Event\CustomerPlacedOrder" method="handleCustomerPlacedOrder" />
        </service>
    </services>
</container>
